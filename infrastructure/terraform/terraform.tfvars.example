# ===========================================
# Terraform Variables Example
# ===========================================
# Copy this file to terraform.tfvars and fill in your values
# Command: cp terraform.tfvars.example terraform.tfvars

# AWS Region
aws_region = "us-east-1"

# Environment (dev, staging, prod)
environment = "dev"

# Project name (used for naming resources)
project_name = "task-management"

# EC2 Instance type
# t2.micro = Free tier eligible (1 vCPU, 1GB RAM)
# t3.micro = $0.0104/hour (~$7.5/month)
# t3.small = $0.0208/hour (~$15/month) - recommended for production
instance_type = "t2.micro"

# SSH Key Pair name (create in AWS Console first)
# AWS Console > EC2 > Key Pairs > Create key pair
# Leave empty if you don't need SSH access
key_name = ""

# Your IP address for SSH access (more secure)
# Find your IP: https://whatismyip.com
# Format: "YOUR_IP/32" (e.g., "203.0.113.50/32")
# Use "0.0.0.0/0" to allow SSH from anywhere (less secure)
allowed_ssh_cidr = "0.0.0.0/0"

# ===========================================
# How to use:
# ===========================================
# 1. Copy this file:
#    cp terraform.tfvars.example terraform.tfvars
#
# 2. Edit terraform.tfvars with your values
#
# 3. Initialize Terraform:
#    terraform init
#
# 4. Preview changes:
#    terraform plan
#
# 5. Apply changes:
#    terraform apply
#
# 6. Destroy when done (to avoid charges):
#    terraform destroy
